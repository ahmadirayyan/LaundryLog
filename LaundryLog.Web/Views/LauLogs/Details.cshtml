@model LaundryLog.Web.Models.LauLog

@{
    ViewData["Title"] = "Details";
}

<h2>Details</h2>

<div>
    <h4>LauLog</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.DateIn)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.DateIn)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.DateOut)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.DateOut)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Price)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Price)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Status)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Status)
        </dd>
        <dt>
            Items
        </dt>
        <dd>
            <table class="table">
                <tr>
                    <th>Items</th>
                    <th>Quantity</th>
                    <th>Status</th>
                </tr>
                @foreach (var item in Model.LauUnits)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.LauItem.Category)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Quantity)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Status)
                        </td>
                    </tr>
                }
            </table>
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
